{
  "manifest_version": 3,
  "name": "Preis-Detektiv",
  "version": "0.0.1",
  "description": "Findet die besten Expert Preise",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "activeTab",
    "scripting",
    "*://*.expert.de/*",
    "declarativeContent"
  ],

  "host_permissions": [
    "*://*.expert.de/*"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.expert.de/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
