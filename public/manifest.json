{
  "manifest_version": 2,
  "name": "Preis-Detektiv",
  "version": "1.1.3",
  "description": "Findet die besten Expert Preise",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },

  "web_accessible_resources": ["preisdetektiv.html", "recaptcha.js"],

  "browser_specific_settings": {
    "gecko": {
      "id": "{d33180db-d9ad-4445-b36e-0e49339156be}"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    },
    "default_title": "Preis-Detektiv"
  },

  "permissions": [
    "storage",
    "cookies",
    "*://*.expert.de/shop/*",
    "*://*.topcashback.de/*",
    "*://*.awin1.com/*"
  ],

  "content_security_policy": "script-src 'self' https://.google.com https://.gstatic.com; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["*://*.expert.de/shop/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"],
      "css": ["preisdetektivApp.css"]
    }
  ]
}
