{
  "manifest_version": 3,
  "name": "Preis-Detektiv",
  "version": "0.0.1",
  "description": "Findet die besten Expert Preise",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },

  "background": {
    "scripts": ["background.js"]
    },

  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "*://*.expert.de/shop/*"
  ],

  "action": {
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.expert.de/shop/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ],
      "css": [
        "preisdetektiv.css"
      ]
    }
  ]
}
